    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realizar Pedido</title>
</head>
<body>
    <h1>Realizar Pedido</h1>
    <form id="pedido-form">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" required>
        <br>
        <label for="mesa">Número da Mesa:</label>
        <input type="number" id="mesa" required>
        <br>
        <button type="submit">Enviar Pedido</button>
    </form>
    <div id="tempo-estimado"></div>

    <script>
        document.getElementById("pedido-form").addEventListener("submit", function(event) {
            event.preventDefault();
            const nome = document.getElementById("nome").value;
            const mesa = document.getElementById("mesa").value;

            // Simulação de processamento (tempo estimado em minutos)
            const tempoEstimado = Math.floor(Math.random() * 30) + 10;

            document.getElementById("tempo-estimado").textContent = `Tempo estimado para a bebida chegar à mesa ${mesa}: ${tempoEstimado} minutos.`;
        });
        <div style="text-align: center; margin-top: 20px;">
        <p><a href="index.html">Voltar à página principal</a></p>
    </div>
    </script>
</body>
</html>
